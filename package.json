{
  "name": "wareki",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:cov": "vitest run --coverage | coveralls",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tohashi/wareki.git"
  },
  "author": "tohashi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tohashi/wareki/issues"
  },
  "homepage": "https://github.com/tohashi/wareki#readme",
  "devDependencies": {
    "coveralls": "3.1.1",
    "prettier": "2.6.2",
    "typescript": "4.6.4",
    "vitest": "0.12.6"
  },
  "files": ["lib"],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "match": "*",
    "failFast": false,
    "timeout": "10000",
    "serial": false,
    "concurrency": "5",
    "verbose": true,
    "tap": false
  },
  "nyc": {
    "include": [
      "./src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-lcov"
    ],
    "sourceMap": false,
    "all": true
  }
}
